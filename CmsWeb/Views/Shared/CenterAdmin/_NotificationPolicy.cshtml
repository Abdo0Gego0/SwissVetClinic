@model NotificationPolicy


@inject ISelectListService slSrvc



<form asp-action="IndexPolicy" asp-controller="Notification" method="post" enctype='multipart/form-data'>

    <div class="container">

@*         <center>

            <h1 class="LoginTitle">Notification policy</h1>

        </center> *@

        <input asp-for="Id" hidden />
        <input asp-for="MedicalCenterId" hidden />

        <br />
        <br />
        <div class="row">
            <div class="col-md-8 mb-3">
                <label class="fieldLabel" asp-for="HoursBeforeAppointment"></label>
                <input type="text" class="form-control fieldInput" asp-for="HoursBeforeAppointment" />
                <span class="text-danger" asp-validation-for="HoursBeforeAppointment"></span>
            </div>

        </div>
        <br />
        <br />
        <div class="row">
            <div class="col-md-8 mb-3">
                <label class="fieldLabel" asp-for="SessionVideos"></label>
                <input type="text" class="form-control fieldInput" asp-for="SessionVideos" />
                <span class="text-danger" asp-validation-for="SessionVideos"></span>
            </div>


        </div>
        <br />
        <br />
        <br />
        <button type="submit" class="form-control addCtrl"> @Localizer["Save"]</button>
    </div>

</form>


<script>
    function preview(evt) {
        var filee = event.target.files[0];
        document.getElementById('prevImg').style.backgroundImage = "url('" + URL.createObjectURL(filee) + "')";
    }
</script>

