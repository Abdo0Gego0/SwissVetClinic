@model ShiftTable    

@inject ISelectListService slSrvc


<div class="k-edit-label">
    <label asp-for="ShiftName"></label>
</div>

<div class="k-edit-field">
    <input class="form-control fieldInput" asp-for="ShiftName" />
</div>


<div class="k-edit-label">
    <label asp-for="DayOfWeek"></label>
</div>

<div class="k-edit-field">
    <select class="form-select " asp-for="DayOfWeek" asp-items="slSrvc.DaysSL()">
        <option selected> Select Day</option>
    </select> 
</div>


<div class="k-edit-label">
    <label asp-for="StartTime" ></label>
</div>

<div class="k-edit-field">
    <input class="form-control fieldInput" asp-for="StartTime" />
</div>

<div class="k-edit-label">
    <label asp-for="EndTime" ></label>
</div>

<div class="k-edit-field">
    <input class="form-control fieldInput" asp-for="EndTime" />
</div>


