@model CmsDataAccess.DbModels.Receipt

<div class="modal-header">
    <h5 class="modal-title">Edit Receipt</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label class="form-label">Company Name</label>
            <input type="text" class="form-control" asp-for="CompanyName" />
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Created at</label>
            <input type="date" class="form-control" asp-for="ReceiptDate" />
            <span asp-validation-for="ReceiptDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Amount of Items</label>
            <input type="number" class="form-control" asp-for="TotalAmount" />
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Total Price</label>
            <div class="input-group">
                <span class="input-group-text">In AED</span>
                <input type="number" class="form-control" asp-for="TotalPrice" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Upload an Image of the receipt</label>
            <input type="file" class="form-control" asp-for="ReceiptPhoto" />
            <span asp-validation-for="ReceiptPhoto" class="text-danger"></span>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>
