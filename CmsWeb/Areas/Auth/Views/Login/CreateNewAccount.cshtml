@addTagHelper *, Kendo.Mvc
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using CmsResources
@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<Messages> Localizer;

<form asp-action="CreateNewAccount" asp-controller="Login" enctype='multipart/form-data'>



<div class="container">
    <br />
    <center>
        <img src="~/siteimages/logoWithText.svg" />
        <br />
        <h1 class="LoginTitle">Create an Account</h1>

    </center>
    <br />
    <br />


    <label class="SectionTilte">@Localizer["Basic Info"]</label>
    <br />
    <br />

    <div class="row">
        <div class="col-md-4">
            <div class="form-floating mb-3">
                    <input type="text" class="form-control accountInput" name="Firstname" id="Firstname" required placeholder="XXXXX">
                <label for="Firstname">First name</label>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-floating mb-3">
                    <input type="text" class="form-control accountInput" name="Middlename" id="Middlename" required  placeholder="XXXXX">
                <label for="Middlename">Middle name</label>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-floating mb-3">
                    <input type="text" class="form-control accountInput" name="Lastname" id="Lastname" required  placeholder="XXXXX">
                <label for="Lastname">Last name</label>
            </div>
        </div>


        <div class="col-md-4">
            <div class="form-floating mb-3">
                    <input type="text" class="form-control accountInput" name="Nationality" id="Nationality" required  placeholder="XXXXX">
                <label for="Nationality">Nationality</label>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-floating mb-3">
                    <input type="text" class="form-control accountInput" name="PassportNumber" id="PassportNumber" required placeholder="XXXXX">
                <label for="PassportNumber">Passport number</label>
            </div>
        </div>


        <div class="col-md-4">
            <div class="form-floating mb-3">
                    <input type="text" class="form-control accountInput" name="NationalCardId" required  id="NationalCardId" placeholder="XXXXX">
                <label for="NationalCardId">National card Id</label>
            </div>
        </div>
        </div>

        <hr />
    <label class="SectionTilte">@Localizer["Contact info"]</label>
    <br />
    <br />

    <div class="row">

        <div class="col-md-4">
            <div class="form-floating mb-3">
                    <input type="text" class="form-control accountInput" name="SubscriberPhone" required  id="SubscriberPhone" placeholder="XXXXX">
                <label for="SubscriberPhone">Subscriber phone</label>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-floating mb-3">
                    <input type="text" class="form-control accountInput" name="SubscriberEmail" required  id="SubscriberEmail" placeholder="XXXXX">
                <label for="SubscriberEmail">Subscriber email</label>
            </div>
        </div>
        </div>
    <hr />

    <label class="SectionTilte">Business Info</label>
    <br />
    <br />

    <div class="row">

        <div class="col-md-4">
            <div class="form-floating mb-3">
                    <input type="text" class="form-control accountInput" name="LicenseNumber" required id="LicenseNumber" placeholder="XXXXX">
                <label for="LicenseNumber">License number</label>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-floating mb-3">
                    <input type="text" class="form-control accountInput" name="LicenseExpireDate" required id="LicenseExpireDate" placeholder="XXXXX">
                <label for="LicenseExpireDate">License expire date</label>
            </div>
        </div>


        <div class="col-md-4">
            <div class="form-floating mb-3">
                    <input type="datetime" class="form-control accountInput" name="CenterName" id="CenterName" required placeholder="XXXXX">
                <label for="CenterName">Center name</label>
            </div>
        </div>


        <div class="col-md-8">
            <div class="form-floating mb-3">
                    <input type="text" class="form-control accountInput" name="CenterAddress" id="CenterAddress" placeholder="XXXXX">
                <label for="CenterAddress">Center address</label>
            </div>
        </div>
        </div>
    <hr />

    <label class="SectionTilte">Upload documnets</label>
    <br />
    <br />
    <div class="row">
        <div class="form-group files color passportFile">
                <input type="file" name="PassportImageFile" required />
        </div>
    </div>

    <br />


        <div class="row">
            <div class="form-group files color licensesFile">
                <input type="file" name="LicenseImageFile" required />
            </div>

        </div>

        <br />



        <div class="divSubscriber">
            <span class="notRegistered">
                By clicking on save you are agreeing to terms and conditions.
                &nbsp;
            </span>
            <button class="btn subcribe" data-toggle="modal" data-target="#termsModal" type="button">Terms And Conditions.</button>

        </div>
        <br />

    <button type="submit" class="form-control addCtrl">Create</button>
        <br />
        <br />


@*     <div class="divSubscriber">
        <a asp-action="TermsAndConditions" class="subcribe"> See terms and conditions</a>
    </div> *@

</div>

</form>



<div id="termsModal" class="modal fade" style="width:100%;" role="dialog" tabindex="-1" aria-labelledby="exampleModalLabel">
    
    <div class="modal-dialog" role="document" style="max-width:80%;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Terms and condtions</h4><button class="close" style="background-color:white;border:none;" type="button" data-dismiss="modal" aria-label="Close">X</button>
            </div>
            <div class="modal-body">
                @Html.Raw(ViewBag.Terms1)
                <br />
                <hr />
                @Html.Raw(ViewBag.Terms2)

            </div>
            <div class="modal-footer"><button class="btn btn-warning" data-dismiss="modal" style="background-color: red;border:none;font-weight:bold" type="button">Close</button></div>
        </div>
    </div>
</div>






<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

<script>
    function preview(evt) {
        var filee = event.target.files[0];
        document.getElementById('prevImg').style.backgroundImage = "url('" + URL.createObjectURL(filee) + "')";
    }
</script>